@{
    var showNav = ViewBag.ShowNav ?? false; // إذا لم يتم التعيين، اجعل القيمة false
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/login.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/lbstyle.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
          rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.css"
          rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.1.0/fonts/remixicon.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css">
</head>
<body>
    @if (ViewBag.ShowNav == true)
    {
    <div class="container-fluid h-100 dashBoard">
        <div class="Topnavpar d-block d-md-none">
            <nav class="navbar bg-body-tertiary fixed-top">
                <div class="container-fluid">
                    <div class="dashboardlogo">
                        <a class="navbar-brand" href="#">
                            <img src="./images/Main Logo.png" alt="" />
                            <h6>
                                STAMINA <br />
                                FITNESS
                            </h6>
                        </a>
                    </div>
                    <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                        <div class="offcanvas-header">
                            <h5 class="offcanvas-title" id="offcanvasNavbarLabel">
                                <div class="dashboardlogo">
                                    <a class="navbar-brand" href="#">
                                        <img src="./images/Main Logo.png" alt="" />
                                        <h6>
                                            STAMINA <br />
                                            FITNESS
                                        </h6>
                                    </a>
                                </div>
                            </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                        </div>
                        <div class="offcanvas-body">
                            <div class="topnav-list">
                                <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                                    <li target="dashHome" class="nav-item sideButton active ">
                                        <a class="nav-link active" aria-current="page" href="#"> <i style="margin-right: 5px;" class="fa-solid fa-table"></i><span>Dashboard</span></a>
                                    </li>
                                    <li target="Admin-profile" class="nav-item sideButton">
                                        <a class="nav-link" href="#">  <i style="margin-right: 5px;" class="fa-solid fa-house"></i><span>Profile</span></a>
                                    </li>
                                    <li target="regeteration" class="nav-item sideButton">
                                        <a class="nav-link" href="#">
                                            <i style="margin-right: 5px;" class="fa-regular fa-pen-to-square"></i><span>Registration</span>
                                        </a>
                                    </li>
                                    <li target="plan" class=" nav-item sideButton">
                                        <a class="nav-link" href="#"> <i style="margin-right: 5px;" class="fa-solid fa-list-check"></i><span>Plan</span></a>
                                    </li>
                                    <li target="payment" class="nav-item sideButton">
                                        <a class="nav-link" href="#">   <i style="margin-right: 5px;" class="fa-solid fa-credit-card"></i><span>Payment</span></a>
                                    </li>
                                    <li target="Inventory" class="nav-item sideButton">
                                        <a class="nav-link" href="#"> <i style="margin-right: 5px;" class="fa-solid fa-warehouse"></i><span>Inventory</span></a>
                                    </li>
                                    <li target="viewMembers" class="nav-item sideButton">
                                        <a class="nav-link" href="#"> <i style="margin-right: 5px;" class="fa-solid fa-users"></i><span>View Members</span></a>
                                    </li>
                                    <li target="coaches" class="nav-item sideButton">
                                        <a class="nav-link" href="#">   <i style="margin-right: 5px;" class="fa-solid fa-dumbbell"></i><span>Coaches</span></a>
                                    </li>
                                    <li target="report" class="nav-item sideButton">
                                        <a class="nav-link" href="#"> <i style="margin-right: 5px;" class="fa-solid fa-book-open"></i><span>Report</span></a>
                                    </li>
                                    <li id="topnavlogout" style="margin-top: 3%; " class="logout">
                                        <i class="fa-solid fa-arrow-right-from-bracket" style="margin-right: 5px;"></i><span>Log out</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <div class="row">
            <div class="col-3 dashboard-links">
                <div class="text-center data">
                    <img src="~/images/PersonCircle.png" />
                    <h3>Administrator Name</h3>
                    <h6>juan.delacruz@gmail.com</h6>
                </div>
                <div class="nav">
                    <ul>
                        <li target="dashHome" class="sideButton"><i class="fa-solid fa-table"></i><a>Dashboard</a></li>
                        <li target="Admin-profile" class="sideButton"><i class="fa-solid fa-house"></i><a href="/Receptionist/Index">Admin Profile</a></li>
                        <li target="regeteration" class="sideButton"><i class="fa-regular fa-pen-to-square"></i><a href="/Member/Create">Registration</a></li>
                        <li target="plan" class="sideButton"><i class="fa-solid fa-list-check"></i><a href="/Membership/Index">Plan</a></li>
                        <li target="payment" class="sideButton"><i class="fa-solid fa-credit-card"></i><a href="/Payment/Create">Payment</a></li>
                        <li target="Inventory" class="sideButton"><i class="fa-solid fa-warehouse"></i><a href="/Equipment/Index">Inventory</a></li>
                        <li target="viewMembers" class="sideButton"><i class="fa-solid fa-users"></i><a href="/Member/Index">View Members</a></li>
                        <li target="coaches" class="sideButton"><i class="fa-solid fa-dumbbell"></i><a href="/Coach/Index">Coaches</a></li>
                        <li target="report" class="sideButton"><i class="fa-solid fa-book-open"></i><a href="/Payment/Index">Report</a></li>
                        <li class="logout" style="margin-top: 30%">
                            <i class="fa-solid fa-arrow-right-from-bracket"></i><a>Log out</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-12 col-lg-9 sections">
                <div class="dashboardNav">
                    <div class="dashboardlogo">
                        <a class="navbar-brand" href="#">
                            <img src="~/images/Main Logo.png" />
                            <h6>STAMINA <br /> FITNESS</h6>
                        </a>
                    </div>
                    <div class="notification me-4">
                        <li><a href="#">feedback</a></li>
                        <i class="fa-solid fa-bell"></i>
                    </div>
                </div>
                @RenderBody()
            </div>
        </div>
    </div>
    }
    else
    {
        @RenderBody()
    }
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/script.js"></script>
</body>
</html>
