<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>STAMINA FITNESS</title>
    <link rel="icon" type="image/png" href="./images/Main Logo.png" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
          rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.css"
          rel="stylesheet" />
</head>
<body>
  
        
                <div id="dashHome" class="section container dashHome ">
                    <div class="row">
                        <div class="col-12 col-lg-7 me-4">
                            <div class="hello">
                                <div class="text">
                                    <h6>Welcome Banner, <span>Martell</span></h6>
                                    <p>
                                        Lorem ipsum dolor sit amet, consectetur adipiscing elit,
                                        sed do eiusmod tempor incididunt ut labore et dolore magna
                                        aliqua.
                                    </p>
                                </div>
                            </div>
                            <div class="statics mt-4">
                                <div class="row">
                                    <div class="col coaches">
                                        <h4>Coaches</h4>
                                        <h6><i class="fa-solid fa-circle me-2"></i>Hazem</h6>
                                        <h6><i class="fa-solid fa-circle me-2"></i>Hazem</h6>
                                        <h6><i class="fa-solid fa-circle me-2"></i>Hazem</h6>
                                    </div>
                                    <div id="sales" class="col sales pb-2">
                                        <h4>Sales</h4>
                                        <canvas id="salesChart"></canvas>
                                        <h5 class="percent">84%</h5>
                                    </div>
                                </div>
                            </div>
                            <div class="active-members">
                                <!--Table members-->
                            </div>
                        </div>
                        <div class="col-12 col-lg-4 h-100">
                            <div id="calendar" class="calender">
                                <div id="monthYear"></div>
                                <div id="daysContainer">
                                    <div>Sun</div>
                                    <div>Mon</div>
                                    <div>Tue</div>
                                    <div>Wed</div>
                                    <div>Thu</div>
                                    <div>Fri</div>
                                    <div>Sat</div>
                                </div>
                            </div>
                            <div class="inventroy">
                                <h4>inventroy</h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="regeteration" class="section container regeteration">
                    <div class="text">
                        <h3>Become a Member!</h3>
                        <h1>Register</h1>
                    </div>
                    <div class="regeterationform">
                        @using (Html.BeginForm("Create", "Member", FormMethod.Post, new { @class = "row g-3" }))
                        {
                           
                                <div class="col-md-6">
                                    <label for="member-name" class="form-label">Name of Participant</label>
                                    <input type="text" class="form-control" id="member-name" />
                                </div>
                                <div class="col-md-6">
                                    <label for="email-address" class="form-label">Email Address</label>
                                    <input type="email" class="form-control" id="email-address" />
                                </div>
                                <div class="col-6">
                                    <label for="contact-no" class="form-label">Contact No.</label>
                                    <input type="text" class="form-control" id="contact-no" />
                                </div>
                                <div class="col-6">
                                    <label for="Address" class="form-label">Address</label>
                                    <input type="text" class="form-control" id="Address" />
                                </div>
                                <div class="col-12 buttons">
                                    <button type="submit" id="add-member" class="btn btn-primary">
                                        Add Membership
                                    </button>
                                    <button type="button" id="cancel" class="btn btn-primary">
                                        cancel
                                    </button>
                                </div>
                            
                        }
                        </div>
                </div>
                <div id="plan" class="section container plan">
                    <div class="text mb-5">
                        <button type="button" id="form-add-plan" class="btn btn-primary">
                            Add plan
                        </button>
                    </div>
                    <div class="planform">
                        <form class="row g-3">
                            <div id="close-form-plan">
                                <button type="button"
                                        id="btn-close-plan"
                                        class="btn-close"
                                        aria-label="Close"></button>
                            </div>
                            <div class="col-md-6">
                                <label for="plan-name" class="form-label">Plan Name</label>
                                <input type="text" class="form-control" id="plan-name" />
                            </div>
                            <div class="col-md-6">
                                <label for="Validity" class="form-label">Validity</label>
                                <input type="text" class="form-control" id="Validity" />
                            </div>
                            <div class="col-md-6">
                                <label for="amount" class="form-label">Amount</label>
                                <input type="email" class="form-control" id="amount" />
                            </div>
                            <div class="col-12 buttons">
                                <button type="submit" id="add-plan" class="btn btn-primary">
                                    Add plan
                                </button>
                                <button type="button" id="cancel" class="btn btn-primary">
                                    cancel
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="plan-table">
                        <!--plan Table-->
                    </div>
                </div>
                <div id="payment" class="section container payment">
                    <div class="text">
                        <h3>Point of Sale</h3>
                        <h1>Add Payment</h1>
                    </div>
                    <div class="paymentform">
                        <form class="row g-3">
                            <div class="col-md-6">
                                <label for="member-phone" class="form-label">Phone of member</label>
                                <input type="text" class="form-control" id="member-name" />
                            </div>
                            <div class="col-md-6">
                                <label for="date-of-payment" class="form-label">Date of Payment</label>
                                <input type="date"
                                       class="form-control"
                                       id="date-of-payment" />
                            </div>
                            <div class="col-md-4">
                                <label for="pay-method" class="form-label">Pay Method</label>
                                <select id="pay-method" class="form-select">
                                    <option selected>Choose...</option>
                                    <option value="Cash Money">Cash Money</option>
                                    <option value="Vodafone cash">Vodafone Cash</option>
                                    <option value="Instapay">Instapay</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label for="amount" class="form-label">Amount</label>
                                <input type="text" class="form-control" id="amount" />
                            </div>
                            <div class="col-12 buttons">
                                <button type="submit"
                                        id="add-payment"
                                        class="btn btn-primary">
                                    Add Membership
                                </button>
                                <button type="button" id="cancel" class="btn btn-primary">
                                    cancel
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
              
                <div id="Inventory" class="section container Inventory">
                    <div class="text mb-5">
                        <button type="button"
                                id="form-add-equipment"
                                class="btn btn-primary">
                            Add Equipment
                        </button>
                    </div>
                    <div class="Inventoryform">
                        <form class="row g-3">
                            <div id="close-form-Inventory">
                                <button type="button"
                                        id="btn-close-Inventory"
                                        class="btn-close"
                                        aria-label="Close"></button>
                            </div>
                            <div class="col-md-6">
                                <label for="Equipment-name" class="form-label">Equipment Name</label>
                                <input type="text" class="form-control" id="Equipment-name" />
                            </div>
                            <div class="col-md-6">
                                <label for="LastMaintanceDate" class="form-label">LastMaintanceDate</label>
                                <input type="date"
                                       class="form-control"
                                       id="LastMaintanceDate" />
                            </div>
                            <div class="col-md-6">
                                <label for="Status" class="form-label">Status</label>
                                <input type="text" class="form-control" id="Status" />
                            </div>
                            <div class="col-md-6">
                                <label for="PruchaseDate" class="form-label">PruchaseDate</label>
                                <input type="date" class="form-control" id="PruchaseDate" />
                            </div>
                            <div class="col-12 buttons">
                                <button type="submit"
                                        id="add-Equipment"
                                        class="btn btn-primary">
                                    Add Equipment
                                </button>
                                <button type="button" id="cancel" class="btn btn-primary">
                                    cancel
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="equuipment-table">
                        <!--equuipment table-->
                    </div>
                </div>
                <div id="viewMembers" class="section container viewMembers">
                    <div class="text">
                        <h1>Active Members</h1>
                    </div>
                    <div class="member-table">
                        <!--member Table-->
                    </div>
                </div>
                <div id="report" class="section container report">
                    <div class="text">
                        <h1>Sales Report</h1>
                    </div>
                    <div class="reportform">
                        <form class="row g-3">
                            <div class="col-md-4">
                                <label for="from-date" class="form-label">From Date</label>
                                <input type="date" class="form-control" id="from-date" />
                            </div>
                            <div class="col-md-4">
                                <label for="todate" class="form-label">To Date</label>
                                <input type="date" class="form-control" id="todate" />
                            </div>
                            <div class="col-md-4">
                                <label for="total" class="form-label">Total</label>
                                <input type="text" class="form-control" id="total" disabled />
                            </div>
                        </form>
                    </div>
                    <div class="sales-table">
                        <!--sales table-->
                    </div>
                </div>
                <div id="Admin-profile"
                     class="section container Admin-profile ">
                    <div class="add-new-admin mb-4">
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal"
                                data-bs-whatever="mdo" id="add-admin">
                            Add New Admin
                        </button>
                    </div>
                    <div class="row">
                        <div class="col-5 admin-info text-center">
                            <img src="~/images/PersonCircle (1).png" />
                            <div class="editprofile d-flex justify-content-center align-items-center">
                                <button type="button" id="edit-profile-button" class="btn">
                                    <i class="fa-regular fa-pen-to-square"></i>
                                    Update Profile
                                </button>
                            </div>

                            <div class="mb-3 d-flex justify-content-between">
                                <label class="form-label">User Name: </label>
                                <p>Hazem</p>
                            </div>
                            <div class="mb-3 d-flex justify-content-between">
                                <label class="form-label">Contact No.: </label>
                                <p>012011010015</p>
                            </div>
                            <div class="mb-3 d-flex justify-content-between">
                                <label class="form-label">Email Address: </label>
                                <p>jdjdjdjjdjdj@gmail.com</p>
                            </div>
                        </div>
                        <div class="col-5 profile-edit-form">
                            <div class="mb-3">
                                <label for="user-name" class="form-label">User Name</label>
                                <input type="text" class="form-control" id="user-name">
                            </div>
                            <div class="mb-3">
                                <label for="contact-Number" class="form-label">Contact Number</label>
                                <input type="text" class="form-control" id="contact-Number">
                            </div>
                            <div class="mb-3">
                                <label for="Email-Address" class="form-label">Email Address</label>
                                <input type="email" class="form-control" id="Email-Address">
                            </div>
                            <div class="col-12 buttons">
                                <button type="submit" id="update-profile" class="btn btn-primary">
                                    Update
                                </button>
                                <button type="button" id="cancel-edit" class="btn btn-primary">
                                    cancel
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Add New Admin</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="newadmin-name" class="col-form-label">Name</label>
                            <input type="text" class="form-control" id="newadmin-name">
                        </div>
                        <div class="mb-3">
                            <label for="newadmin-phone" class="col-form-label">Phone Number</label>
                            <input type="text" class="form-control" id="newadmin-phone">
                        </div>
                        <div class="mb-3">
                            <label for="newadmin-email" class="col-form-label">Email Address</label>
                            <input type="email" class="form-control" id="newadmin-email">
                        </div>
                        <div class="mb-3">
                            <label for="newadmin-pass" class="col-form-label">Password</label>
                            <input type="password" class="form-control" id="newadmin-pass">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" id="save-new-admin" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/script.js"></script>
</body>
</html>
