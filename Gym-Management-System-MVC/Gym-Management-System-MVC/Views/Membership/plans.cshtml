@model IEnumerable<Gym_Management_System_MVC.Models.Membership>
<div id="plan" class="section container plan">
    <div class="text mb-5">
        <button type="button" id="form-add-plan" class="btn btn-primary">
            Add plan
        </button>
    </div>
    <div class="planform">
        <form class="row g-3" action="@Url.Action("Create", "Membership")" method="post">
            <div id="close-form-plan">
                <button type="button"
                        id="btn-close-plan"
                        class="btn-close"
                        aria-label="Close"></button>
            </div>
            <div class="col-md-6">
                <label for="Type" class="form-label">Type</label>
                <input type="text" class="form-control" name="Type" id="Type" />
            </div>
            <div class="col-md-6">
                <label for="Cost" class="form-label">Cost</label>
                <input type="text" class="form-control" name="Cost"  id="Cost" />
            </div>
            <div class="col-12 buttons">
                <button type="submit" id="add-plan" class="btn btn-primary">
                    Add plan
                </button>
                <button type="button" id="cancel" class="btn btn-primary">
                    cancel
                </button>
            </div>
        </form>
    </div>
    <div style="margin-right: 60%;" class="plan-table mt-3 ">

        <div class="controls">
            <h6>Show Entities:</h6>
            <select class="rowsSelect" onchange="filterRows(event)">
                <option value="all">all</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>
            <input type="text" class="searchInput" onkeyup="searchTable(event)" placeholder="Search...">
        </div>


        <table class="dataTable">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Cost</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var membership in Model)
                {
                    <tr>
                        <td>@membership.Type</td>
                        <td>@membership.Cost</td>
                        
                        <td>
                            <button type="button" class="btn editplan btn-primary" data-bs-toggle="modal" data-bs-target="#editplan">
                                Edit
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
<div class="modal fade" id="editplan" tabindex="-1" aria-labelledby="editplan" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="editplan">Edit Plan</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="newplan-name" class="col-form-label">Plan Name</label>
                        <input type="text" class="form-control" name="newplan-name" id="newplan-name">
                    </div>
                    <div class="mb-3">
                        <label for="newplan-Validity" class="col-form-label">Validity</label>
                        <input type="text" class="form-control" name="newplan-Validity" id="newcoach-Validity">
                    </div>
                    <div class="mb-3">
                        <label for="newplan-Amount" class="col-form-label">Amount</label>
                        <input type="text" class="form-control" name="newplan-Amount" id="newcplan-Amount">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" id="save-new-admin" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>
