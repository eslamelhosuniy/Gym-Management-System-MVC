@model List<Gym_Management_System_MVC.Models.Member>

<div id="viewMembers" class="section container viewMembers">
    <div class="text">
        <h1>Active Members</h1>
    </div>
    <div class="member-table">
        <h2 style="color: white; margin-bottom: 1rem;">Gym Members</h2>
        <div class="controls">
            <h6>Show Entities:</h6>
            <select class="rowsSelect" onchange="filterRows(event)">
                <option value="all">All</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>
            <input type="text" class="searchInput" onkeyup="searchTable(event)" placeholder="Search...">
        </div>

        <table class="dataTable">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email Address</th>
                    <th>Contact No.</th>
                    <th>Address</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var member in Model)<!-- المرور على قائمة الأعضاء -->
                {
                <tr>
                    <td>@member.Name</td>
                    <td>@member.Email</td>
                    <td>@member.PhoneNumber</td>
                    <td>@member.Address</td>
                    <td>
                        <button type="button" class="btn EditMemper btn-primary" data-bs-toggle="modal"
                                data-bs-target="#EditMemper" data-id="@member.ID">
                            Edit
                        </button>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="EditMemper" tabindex="-1" aria-labelledby="EditMemper" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Member</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <form class="row g-3">
                    <div class="col-md-6">
                        <label for="member-name" class="form-label">Name </label>
                        <input type="text" class="form-control" name="EditMember-name" id="EditMember-name" />
                    </div>
                    <div class="col-md-6">
                        <label for="email-address" class="form-label">Email Address</label>
                        <input type="email" class="form-control" name="EditMember-EmailAddress" id="EditMember-EmailAddress" />
                    </div>
                    <div class="col-6">
                        <label for="contact-no" class="form-label">Contact No</label>
                        <input type="text" class="form-control" name="EditMember-ContactNo" id="EditMember-ContactNo" />
                    </div>
                    <div class="col-6">
                        <label for="Address" class="form-label">Address</label>
                        <input type="text" class="form-control" name="EditMember-adress" id="EditMember-adress" />
                    </div>


                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" id="save-new-admin" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>